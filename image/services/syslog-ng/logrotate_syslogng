/var/log/syslog
{
	rotate 7
	maxsize 500m
	daily
	missingok
	notifempty
	delaycompress
	compress
	postrotate
		sv reload syslog-ng > /dev/null
	endscript
}

/var/log/*.log
/var/log/*.info
/var/log/*.warn
/var/log/*.err
/var/log/debug
/var/log/messages
{
	rotate 4
	weekly
	maxsize 50m
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	postrotate
		sv reload syslog-ng > /dev/null
	endscript
}
